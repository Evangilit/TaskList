<!DOCTYPE html>
<html>
<head>
    <title>main</title>
    <meta charset="UTF-8">
    <link href="/css/myUglyCss.css" rel="stylesheet" type="text/css">
</head>
<body>
<h2>Main page</h2>
<div>
    <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <input type="submit" value="Sign Out"/>
    </form>
</div>
<div>
    <a href="/addtask">Add a task</a>
</div>
<table>
    <tr>
        <th>Target</th>
        <th>Description</th>
        <th>Deadline</th>
        <th>User</th>
        <th>Action</th>
    </tr>
    {{#tasks}}
    <tr>
        <td>{{target}}</td>
        <td>{{description}}</td>
        <td>{{date}}</td>
        <td>{{authorName}}</td>
        <td>
            <a href="/edittask/{{id}}">edit</a>
            <a href="/deletetask/{{id}}">delete</a>
        </td>
    </tr>
    {{/tasks}}
</table>
</body>
</html>